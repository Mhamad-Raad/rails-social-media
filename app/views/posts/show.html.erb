<%= stylesheet_link_tag "posts" %>
<main>
  <h1><%= @post.text %></h1>
  <p><%= @post.created_at %></p>
  <p>Likes: <%= @post.likes.length %> </p>
  <section>
    <h2>Comments</h2>
      <% @post.comments.each do |comment| %>
          <p><%= comment.text %></p>
          <p><%= comment.created_at %></p>
      <% end %>
  </section>



</main>