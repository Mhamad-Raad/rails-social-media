<%= stylesheet_link_tag "posts" %>
<main>
  <h1><%= @post.text %></h1>
  <p><%= @post.created_at %></p>
  <p>Likes: <%= @post.likes.length %> </p>
  <%= form_with model: like, method: :post, url: post_likes_path(@post, @user), local: true, scope: :new_like do |form| %>
    <%= form.submit "Like", class: "btn btn-primary" %>
    <%= form.hidden_field :post_id, value: @post.id %>
    <%= form.hidden_field :author_id, value: @user.id %>
  <% end %>
  <section>
    <h2>Comments</h2>
      <% @post.comments.each do |comment| %>
          <p><%= comment.text %></p>
          <p><%= comment.created_at %></p>
      <% end %>
  </section>
  <section>
    <h2>ADD a comment</h2>
      <%= form_with model: comment, local: true, url:  post_comments_path(@post), scope: @comment, class: "my-form" do |form| %>
        <%= form.text_area :text, placeholder: "Write your comment here", class: "my-text-area" %>
        <%= form.hidden_field :post_id, value: @post.id %>
        <%= form.hidden_field :author_id, value: @user.id %>
      <%= form.submit class: "my-submit-button"%>
  <% end %>
  </section>

</main>