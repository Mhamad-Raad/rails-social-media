<%= stylesheet_link_tag "users" %>
<main>
  <% @users.each do |user| %>
    # link to a user details
    <div class="user">
      <a href="/users/<%= user.id %>">
      <img src=<%= user.photo  %> alt='<%= user.photo  %>' />
        <h1><%= user.name %></h1>
        <h2><%= user.bio %></h2>
        <h3>Posts: <%= user.posts_counter %></h3>
        <p>ID: <%= user.id%></p>
      </a>
    </div>
  </main>
<% end %>
